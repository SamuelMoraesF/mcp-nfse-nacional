{
  "name": "mcp-nfse-nacional",
  "version": "1.0.2",
  "description": "MCP Server para consulta de NFSe no portal nacional (nfse.gov.br)",
  "main": "dist/index.js",
  "bin": {
    "mcp-nfse-nacional": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "prepare": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "start": "node --openssl-legacy-provider dist/index.js",
    "test": "NODE_OPTIONS=--openssl-legacy-provider jest",
    "test:acceptance": "NODE_OPTIONS=--openssl-legacy-provider jest --testPathPatterns=acceptance --verbose"
  },
  "keywords": ["mcp", "nfse", "nota-fiscal", "brasil"],
  "author": "SamuelMoraesF",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "axios": "^1.13.5",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.4",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
